{
  "format_on_save": "on",
  "formatter": "language_server",
  "file_scan_exclusions": [
    "**/content/docs/es/**",
    "**/app/\\[locale\\]/**/_pages/page.es.tsx"
  ],
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": [
        "biome",
        "!vtsls",
        "!typescript-language-server",
        "!eslint"
      ]
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": [
        "biome",
        "!vtsls",
        "!typescript-language-server",
        "!eslint"
      ]
    },
    "TSX": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": [
        "biome",
        "!vtsls",
        "!typescript-language-server",
        "!eslint"
      ]
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": [
        "biome",
        "..."
      ]
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": "language_server",
      "remove_trailing_whitespace_on_save": true
    }
  }
}
